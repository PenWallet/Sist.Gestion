@model UI.ViewModels.EditarTelefonoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CambiarTelefono</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Edita el teléfono:</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.persona.id)
    
            <div class="form-group">
                Nombre de Departamento:
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.nombreDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.nombreDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.persona.idDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombreDepartamento, "", new { @class = "text-danger" })
                </div>
            </div>
            <br/>
            <div class="form-group">
                Nombre:
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.persona.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.persona.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.persona.nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                Apellidos:
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.persona.apellidos, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.persona.apellidos, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.persona.apellidos, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                Teléfono:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.persona.telefono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.persona.telefono, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    @ViewData["Estado"]

    <div>
        @Html.ActionLink("Volver a la lista", "Index", new { id = Model.persona.idDepartamento })
    </div>
</body>
</html>
